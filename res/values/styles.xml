<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar"></style>

    <!-- tactionbar -->
    <style name="lips_TactionBar">
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_tacionbar_gray</item>
    </style>

    <style name="TabButtonStyle">
        <item name="textColorOn">@color/tactionbar_text_selected</item>
        <item name="textColorOff">@color/tactionbar_text</item>
        <item name="android:textColor">@color/tactionbar_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/selector_tab_bg</item>
    </style>

    <style name="login_et">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:textColorHint">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">41.0dip</item>
        <item name="android:layout_marginBottom">-1.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_base">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="signup_input_field" parent="@style/text_base">
        <item name="android:textSize">14.0sp</item>
        <item name="android:background">@drawable/selector_signup_edittext</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="BaseButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_primary" parent="@style/BaseButton">
        <item name="android:background">@drawable/selector_btn_primary</item>
    </style>

    <style name="textLineDivider">
        <item name="textLineDividerBg">@color/divider_bg_gray</item>
        <item name="textLineDividerTextColor">@color/divider_text_gray</item>
    </style>

    <style name="listItemCategory" parent="@style/text_base">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>
<!--title button-->
    <style name="titleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/selector_bg_title_btn</item>
    </style>
</resources>