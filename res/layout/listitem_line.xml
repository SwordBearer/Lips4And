<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:clickable="true"
              android:layout_width="match_parent"
              android:background="@drawable/listitem_line_bg"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/listitem_line_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:background="@color/divider_gray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/listitem_line_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FUUUUUUU"
            android:gravity="left"
            android:padding="10dp"
            android:background="@drawable/touch_clear_bg"
            android:layout_weight="6"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/divider_gray"/>

        <Button
            android:id="@+id/listitem_line_comm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_btn_comm"
            android:background="@drawable/touch_clear_bg"
            android:layout_weight="2"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/divider_gray"/>

        <Button
            android:id="@+id/listitem_line_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_btn_like"
            android:background="@drawable/touch_clear_bg"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>